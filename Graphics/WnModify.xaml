<Window x:Class="SmRecipeModifier.Graphics.WnModify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Modifier" WindowStartupLocation="CenterOwner" Width="600" Height="400">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="50">
            <Image x:Name="ImRecipeIcon" Source="/Resources/Logo.png" Margin="10,10,0,10" Width="30"/>
            <Button Content="Save" DockPanel.Dock="Right" Margin="0,10,10,10" Width="50" IsDefault="True" Click="Save"/>
            <Label x:Name="LbRecipeName" Content="This is content" Margin="10,10,10,10" VerticalContentAlignment="Center"/>
        </DockPanel>
        <TabControl/>
    </DockPanel>
</Window>