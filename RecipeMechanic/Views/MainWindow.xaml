<Window x:Class="RecipeMechanic.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:core="clr-namespace:RecipeMechanic.Core"
        xmlns:viewModels="clr-namespace:RecipeMechanic.ViewModels"
        Title="Recipe Mechanic" MinWidth="800" MinHeight="500" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OnOpenRecipe"/>
        <CommandBinding Command="Save" CanExecute="CanSaveRecipe" Executed="OnSaveRecipe"/>
        <CommandBinding Command="SaveAs" CanExecute="CanSaveRecipeAs" Executed="OnSaveRecipeAs"/>
        <CommandBinding Command="core:Commands.AddRecipe" CanExecute="IsItemsAvailable" Executed="OnAddRecipe"/>
        <CommandBinding Command="core:Commands.ModifyRecipe" CanExecute="IsRecipeSelected" Executed="OnModifyRecipe"/>
        <!--<CommandBinding Command="c:Commands.ModifyAllRecipes" CanExecute="IsItemsAvailable" Executed="OnModifyAllRecipes"/>-->
        <CommandBinding Command="Delete" CanExecute="IsRecipeSelected" Executed="OnRemoveRecipe"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Command="Open" InputGestureText="Ctrl+O"/>
                <Separator/>
                <MenuItem Command="Save" InputGestureText="Ctrl+S"/>
                <MenuItem Command="SaveAs" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="Exit" InputGestureText="Alt+F4" Click="OnExit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Command="core:Commands.AddRecipe"/>
                <MenuItem Command="core:Commands.ModifyRecipe"/>
                <!--<MenuItem Header="Modify All Recipes" Command="c:Commands.ModifyAllRecipes"/>-->
                <MenuItem Command="Delete"/>
            </MenuItem>
            <MenuItem Header="Game">
                <MenuItem Header="Launch Steam Backup Wizard" Click="OnLaunchBackupWizard"/>
                <MenuItem Header="Verify Game Files (via Steam)" Click="OnVerifyGameFiles"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="FilterInput" Grid.Row="0" metro:TextBoxHelper.Watermark="Search" TextChanged="OnRecipeFilter"/>
            <ListView x:Name="RecipeList" Grid.Row="2" ItemsSource="{Binding Path=RecipeList}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Id}">ID</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Name}">Name</GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Description}">Description</GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="core:Commands.ModifyRecipe"/>
                        <MenuItem Command="Delete" InputGestureText="Del"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="MouseDoubleClick">
                        <behaviors:InvokeCommandAction Command="core:Commands.ModifyRecipe"/>
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ListView>
        </Grid>
    </Grid>
</Window>