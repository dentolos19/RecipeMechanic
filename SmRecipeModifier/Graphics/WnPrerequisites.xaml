<ma:MetroWindow x:Class="SmRecipeModifier.Graphics.WnPrerequisites"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:ma="http://metro.mahapps.com/winfx/xaml/controls"
                Title="{StaticResource String_PrerequisitesWinTitle}" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Width="500" Height="300">
        <Label Content="Hello Mechanic!" Width="200" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,200"/>
        <DockPanel Width="400" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button DockPanel.Dock="Right" Content="Browse" Width="75" Margin="10,0,0,0" Click="BrowseGameDataPath"/>
            <TextBox x:Name="GameDataPathBox" ma:TextBoxHelper.Watermark="Game Data Path" VerticalContentAlignment="Center" IsReadOnly="True"/>
        </DockPanel>
        <Button Content="Continue" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="150,150,0,0" IsDefault="True" Click="Continue"/>
        <Button Content="Cancel" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,150,150,0" Click="Cancel"/>
    </Grid>
</ma:MetroWindow>