<mahApps:MetroWindow x:Class="SmRecipeModifier.Graphics.WnIntro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Introduction" TitleCharacterCasing="Normal" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
        <Grid Width="500" Height="300">
                <Label Content="Hello World!" Width="200" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,200"/>
                <DockPanel Width="400" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button DockPanel.Dock="Right" Content="Browse" Width="75" Margin="10,0,0,0"
                                Click="BrowseGameDataPath"/>
                        <TextBox x:Name="GameDataPathBox" mahApps:TextBoxHelper.Watermark="Game Data Path" VerticalContentAlignment="Center" IsReadOnly="True"/>
                </DockPanel>
                <Button Content="Continue" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,150,0,0"
                        Click="Continue"/>
        </Grid>
</mahApps:MetroWindow>