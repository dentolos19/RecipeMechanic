<mahApps:MetroWindow x:Class="SmRecipeModifier.Graphics.WnModifyRq"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
                     Title="Requirement Modifier" WindowStartupLocation="CenterOwner" Width="400" SizeToContent="Height">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="50">
            <Image Source="/Resources/Logo.png" Width="30" Margin="10,10,0,10"/> <Button Content="Save" Width="50" DockPanel.Dock="Right" IsDefault="True" Margin="10,10,10,10" Click="Save"/> <Button Content="Cancel" Width="50" DockPanel.Dock="Right" Margin="10,10,0,10" Click="Cancel"/> <Label x:Name="LbTitle" Content="This is content" VerticalContentAlignment="Center" Margin="10,10,0,10"/>
        </DockPanel>
        <StackPanel>
            <DockPanel Margin="10,10,10,0">
                <Label Content="Quantity" VerticalContentAlignment="Center" Width="100"/> <TextBox x:Name="TbQuantity" VerticalContentAlignment="Center"/>
            </DockPanel>
            <DockPanel Margin="10,10,10,10">
                <Label Content="Item" VerticalContentAlignment="Center" Width="100"/> <ComboBox x:Name="CbItem" VerticalContentAlignment="Center"/>
            </DockPanel>
        </StackPanel>
    </DockPanel>
</mahApps:MetroWindow>