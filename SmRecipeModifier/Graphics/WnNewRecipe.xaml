<Window x:Class="SmRecipeModifier.Graphics.WnNewRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Recipe" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel Width="500" Height="50">
        <Image Source="/Resources/Assets/Icon.png" Margin="10,10,0,10"/>
        <Button DockPanel.Dock="Right" Margin="0,10,10,10" Content="Create" Width="75" IsDefault="True" Click="Create"/>
        <Button DockPanel.Dock="Right" Margin="0,10,10,10" Content="Modify" Width="75" Click="Modify"/>
        <ComboBox x:Name="ItemList" Margin="10,10,10,10" SelectionChanged="UpdateSelection"/>
    </DockPanel>
</Window>